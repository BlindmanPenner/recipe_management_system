<h1>Recipe Cards</h1>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= link_to 'Add Recipe Card', new_recipe_path %>

<div class="recipes">
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <%= link_to recipe.name, recipe_path(recipe) %>
    </div>
  <% end %>
  <%= link_to 'Create Grocery List', new_grocery_list_path %>

</div>
