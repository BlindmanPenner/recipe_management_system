<h1><%= @recipe.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<p>
  <strong>Special notes:</strong>
  <%= @recipe.special_notes %>
</p>

<h2>Ingredients</h2>
<% @recipe.ingredients.each do |ingredient| %>
  <p>
    <%= ingredient.name %> - <%= ingredient.amount %>
  </p>
<% end %>

<%= link_to 'Back', recipes_path %>
