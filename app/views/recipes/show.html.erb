<h1><%= @recipe.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<p>
  <strong>Special notes:</strong>
  <%= @recipe.special_notes %>
</p>

<h2>Ingredients</h2>
<% @recipe.ingredients.each do |ingredient| %>
  <p>
    <%= ingredient.name %> - <%= ingredient.amount %>
  </p>
<% end %>

<%= link_to 'Delete Recipe', recipe_path(@recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' }, class: 'btn btn-danger', id: 'delete-recipe' %>
<%= link_to 'Back', recipes_path %>
